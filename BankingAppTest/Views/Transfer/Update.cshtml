@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Transaction

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden/>
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Transaction Details</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="FromAccount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="FromAccount" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="FromAccount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ToAccount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ToAccount" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="ToAccount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="TransactionTime"></label>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="TransactionTime" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="TransactionTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="AmountDebited"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="AmountDebited" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="AmountDebited" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="FromAccountBalance"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="FromAccountBalance" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="FromAccountBalance" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ToAccountBalance"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ToAccountBalance" class="form-control" readonly="readonly"/>
                        <span asp-validation-for="ToAccountBalance" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        @* <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Save" />
                        </div>*@
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back to List</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}