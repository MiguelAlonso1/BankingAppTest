@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BankAccount>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">All Accounts</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="BankAccount" asp-action="Create" class="btn btn-primary">Create new Account</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>
                    Account Name
                </th>
                <th>
                    Balance
                </th>
                <th>
                    Changes
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="35%">@obj.Name</td>
                    <td width="35%">@obj.Balance</td>
                    <td width="30%">
                        <div class="w-100 btn-group"role="group">
                            <a asp-controller="BankAccount" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Edit</a>
                            <a asp-controller="BankAccount" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No Accounts created yet</p>
    }

</div>