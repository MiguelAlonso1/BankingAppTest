@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BankingAppTest.Models.ViewModels.ExpenseVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Transfer Funds</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Transfer.ExpenseType">From Account</label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Transfer.ExpenseName">To Account</label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Transfer.Amount">Amount to Transfer</label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <select asp-for="@Model.FromAccount" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>--From Account--</option>
                        </select>
                        <span asp-validation-for="@Model.FromAccount" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select asp-for="@Model.ToAccount" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>--To Account--</option>
                        </select>
                        <span asp-validation-for="@Model.ToAccount" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Transfer.Amount" class="form-control"/>
                        <span asp-validation-for="Transfer.Amount" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Transfer"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back to Transactions</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}